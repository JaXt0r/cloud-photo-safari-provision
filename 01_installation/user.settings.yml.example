# Create a copy of this file as user.settings.yml and modify the settings as per your desire
user:
  fullname: Firstname Lastname
  private_key: ~/.ssh/id_rsa
  lang: de_DE.utf8
settings:
  system:
    use_proxy: false
    http_proxy: ''
    https_proxy: ''
    no_proxy: 'localhost, 172.0.0.1'
box:
  distro: centos73-desktop
  usb2: true
  memory: 4096
  cpus: 2
  monitorcount: 2
  paravirtprovider: default
  portforwardings:
    webapp:
      protocol: tcp
      host-port: 8080
      guest-port: 8080
  shares:
    share:
      host: D:\dev\share
      guest: /usr/local/shared_data
